<div class="px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Impact Metrics</h1>
        <p class="mt-2 text-sm text-gray-700">Track and analyze the impact of budget allocations</p>
      </div>
      <%= link_to "Add New Metric", new_impact_metric_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
    </div>
  </div>

  <!-- Impact Overview -->
  <div class="bg-white shadow rounded-lg mb-6">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Impact Overview</h3>
      
      <div class="grid grid-cols-1 gap-5 sm:grid-cols-4">
        <div class="bg-blue-50 overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                  <span class="text-white text-sm font-medium">ðŸ“Š</span>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Metrics</dt>
                  <dd class="text-lg font-medium text-gray-900"><%= @total_metrics %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-green-50 overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                  <span class="text-white text-sm font-medium">ðŸ“ˆ</span>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Avg Value</dt>
                  <dd class="text-lg font-medium text-gray-900"><%= @average_value.round(1) %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Metrics List -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">All Impact Metrics</h3>
      
      <% if @impact_metrics.any? %>
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Metric Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Allocation</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Value</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @impact_metrics.each do |metric| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                          <span class="text-blue-600 text-sm font-medium">ðŸ“Š</span>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900"><%= metric.metric_name %></div>
                        <div class="text-sm text-gray-500"><%= truncate(metric.description, length: 50) %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= link_to truncate(metric.budget_allocation.description, length: 30), budget_budget_allocation_path(metric.budget_allocation.budget, metric.budget_allocation), class: "text-blue-600 hover:text-blue-900" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= metric.metric_type.titleize %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= metric.formatted_value %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <%= truncate(metric.description, length: 50) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex space-x-2">
                      <%= link_to "View", impact_metric_path(metric), class: "text-blue-600 hover:text-blue-900" %>
                      <%= link_to "Edit", edit_impact_metric_path(metric), class: "text-green-600 hover:text-green-900" %>
                      <%= link_to "Delete", impact_metric_path(metric), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if @impact_metrics.respond_to?(:current_page) %>
          <div class="mt-6">
            <%= paginate @impact_metrics %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <div class="mx-auto h-12 w-12 text-gray-400">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No impact metrics yet</h3>
          <p class="mt-1 text-sm text-gray-500">Start tracking the impact of your budget allocations!</p>
          <div class="mt-6">
            <%= link_to "Add First Metric", new_impact_metric_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Impact Analysis -->
  <% if @impact_metrics.any? %>
    <div class="bg-white shadow rounded-lg mt-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Impact Analysis</h3>
        
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <!-- Type Impact -->
          <div>
            <h4 class="text-sm font-medium text-gray-900 mb-3">Impact by Type</h4>
            <div class="space-y-3">
              <% @type_impact.each do |type_name, data| %>
                <div class="bg-gray-50 rounded-lg p-3">
                  <div class="flex justify-between items-center">
                    <span class="text-sm font-medium text-gray-900"><%= type_name.titleize %></span>
                    <span class="text-sm text-gray-500"><%= data[:count] %> metrics</span>
                  </div>
                  <div class="mt-2">
                    <div class="flex justify-between text-xs text-gray-500">
                      <span>Avg Value:</span>
                      <span class="font-medium"><%= data[:avg_value].round(1) %></span>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Value Distribution -->
          <div>
            <h4 class="text-sm font-medium text-gray-900 mb-3">Value Distribution</h4>
            <div class="space-y-3">
              <% @value_distribution.each do |value, count| %>
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <span class="text-sm text-gray-600"><%= value %></span>
                  </div>
                  <span class="text-sm font-medium text-gray-900"><%= count %> metrics</span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div> 