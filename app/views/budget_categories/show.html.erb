<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @budget_category.name %></h1>
        <p class="mt-2 text-sm text-gray-700"><%= @budget_category.description %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit", edit_budget_category_path(@budget_category), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= link_to "Back to Categories", budget_categories_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  </div>

  <!-- Category Details -->
  <div class="bg-white shadow rounded-lg mb-6">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Category Details</h3>
      
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Spending Limit</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @budget_category.spending_limit_percentage %>%</dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Total Allocations</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @budget_category.budget_allocations.count %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Associated Budgets</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @budget_category.budgets.count %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Impact Metrics</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @budget_category.budget_allocations.includes(:impact_metrics).flat_map(&:impact_metrics).count %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Budget Allocations -->
  <div class="bg-white shadow rounded-lg mb-6">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Budget Allocations</h3>
      
      <% if @budget_category.budget_allocations.any? %>
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Budget</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @budget_category.budget_allocations.includes(:budget).each do |allocation| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= link_to allocation.budget.title, budget_path(allocation.budget), class: "text-blue-600 hover:text-blue-900" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    $<%= number_with_precision(allocation.amount, precision: 2) %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <%= truncate(allocation.description, length: 50) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= allocation.created_at.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex space-x-2">
                      <%= link_to "View", budget_budget_allocation_path(allocation.budget, allocation), class: "text-blue-600 hover:text-blue-900" %>
                      <%= link_to "Edit", edit_budget_budget_allocation_path(allocation.budget, allocation), class: "text-green-600 hover:text-green-900" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="mx-auto h-12 w-12 text-gray-400">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No allocations</h3>
          <p class="mt-1 text-sm text-gray-500">This category hasn't been used in any budget allocations yet.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Impact Metrics -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Impact Metrics</h3>
      
      <% impact_metrics = @budget_category.budget_allocations.includes(:impact_metrics).flat_map(&:impact_metrics) %>
      <% if impact_metrics.any? %>
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Allocation</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Metric Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Value</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% impact_metrics.each do |metric| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= link_to truncate(metric.budget_allocation.description, length: 30), budget_budget_allocation_path(metric.budget_allocation.budget, metric.budget_allocation), class: "text-blue-600 hover:text-blue-900" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= metric.metric_name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= metric.metric_type.titleize %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= metric.formatted_value %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <%= truncate(metric.description, length: 50) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex space-x-2">
                      <%= link_to "View", impact_metric_path(metric), class: "text-blue-600 hover:text-blue-900" %>
                      <%= link_to "Edit", edit_impact_metric_path(metric), class: "text-green-600 hover:text-green-900" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="mx-auto h-12 w-12 text-gray-400">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No impact metrics</h3>
          <p class="mt-1 text-sm text-gray-500">No impact metrics have been created for this category yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
